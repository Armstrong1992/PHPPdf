<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pdf SYSTEM "%resources%/dtd/doctype.dtd">
<pdf>
    <dynamic-page>
    	<placeholders>
    		<header>
    			<div height="14" background.color="black" color="white">
    				header
    			</div>
    		</header>
    		<footer>
    			<div height="14" background.color="black" color="white">
    				footer
    			</div>
    		</footer>
    	</placeholders>

        <div class="outside-column" height="100">
            Column with "equals-columns" attribute off
        </div>

        <column-layout id="column" number-of-columns="2" margin-between-columns="20">
            <div height="1500" background.color="gray">
                Some long container
            </div>
           <div height="2000" background.color="green">
                Some another long container
            </div>
        </column-layout>

        <div class="outside-column">
            Column with "equals-columns" attribute on
        </div>
        
        <column-layout extends="column" equals-columns="true">
            <div height="400" background.color="gray">
                Some container
            </div>
        </column-layout>
        
        
    </dynamic-page>
</pdf>
